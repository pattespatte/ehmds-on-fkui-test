{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vue specific */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* For library build */
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,

    /* Composite project */
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "plugins/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "docs"
  ]
}
